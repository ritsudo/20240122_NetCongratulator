@page
@model NetCongratulator.Pages.EditAvatarModel
@{
}

<div id="editForm">
    <h1>Редактирование аватара</h1>
    @if (Model.UserCardToEdit is not null)
    {
        <div id="editAvatar">
            @if (Model.UserCardToEdit.ImageName != null)
            {
                <img class="avatar-image" src="~/uploads/@Model.UserCardToEdit.ImageName" alt="Img error">
            }
            else
            {
                <img class="avatar-image" src="~/assets/no_avatar.png" alt="No avatar">
            }

            <form method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="UserImageEditDto.File" class="control-label">Выберите файл (jpg, png):</label>
                    <input asp-for="UserImageEditDto.File" class="form-control" type="file"/>
                    <span asp-validation-for="UserImageEditDto.File" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserImageEditDto.Id" class="control-label">ID пользователя</label>
                    <input asp-for="UserImageEditDto.Id" class="form-control" value="@Model.UserCardToEdit.Id" />
                    <span asp-validation-for="UserImageEditDto.Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Изменить аватарку" class="btn btn-primary" style="margin-top: 10px; width: 200px;" />
                </div>
            </form>
        </div>

        <br>
    }
</div>