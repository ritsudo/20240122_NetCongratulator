@page
@model NetCongratulator.Pages.EditPageModel
@{
}

<div id="editForm">
    <h1>Редактирование карточки</h1>
    @if (Model.UserCardToEdit is not null)
    {
        <div id="editAvatar">
            @if (Model.UserCardToEdit.ImageName != null)
            {
                <img class="avatar-image" src="~/uploads/@Model.UserCardToEdit.ImageName" alt="Img error">
            }
            else
            {
                <img class="avatar-image" src="~/assets/no_avatar.png" alt="No avatar">
            }
        </div>

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EditedUserCard.FirstName" class="control-label">Имя</label>
                <input asp-for="EditedUserCard.FirstName" class="form-control" value="@Model.UserCardToEdit.FirstName" />
                <span asp-validation-for="EditedUserCard.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EditedUserCard.LastName" class="control-label">Фамилия</label>
                <input asp-for="EditedUserCard.LastName" class="form-control" value="@Model.UserCardToEdit.LastName" />
                <span asp-validation-for="EditedUserCard.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EditedUserCard.BirthdayDate" class="control-label">Дата рождения</label>
                <input asp-for="EditedUserCard.BirthdayDate" type="date" class="form-control"
                    value="@Model.UserCardToEdit.BirthdayDate?.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="EditedUserCard.BirthdayDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Изменить" class="btn btn-primary" style="margin-top: 10px; width: 200px;" />
            </div>
        </form>
    }
</div>